{
  "private": true,
  "name": "web-moing.lumir.page",
  "type": "module",
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": "^20.19.6"
  },
  "scripts": {
    "prepare": "husky",
    "dev": "vite dev",
    "build": "vite build",
    "start": "vite preview",
    "coverage": "c8 --reporter=lcov npm run test",
    "test": "npm run test:types && npm run test:unit",
    "test:types": "tsc && npm run test -w apps/backend",
    "test:unit": "node --test",
    "fix": "npm-run-all -c -l -p fix:*",
    "fix:eslint": "eslint --fix",
    "fix:prettier": "prettier . --write --ignore-unknown",
    "fix:markdownlint": "markdownlint **/*.md --fix",
    "lint": "npm-run-all -c -l -p lint:*",
    "lint:eslint": "eslint",
    "lint:prettier": "prettier . --check --ignore-unknown",
    "lint:editorconfig": "editorconfig-checker -config .editorconfig-checker.json",
    "lint:markdownlint": "markdownlint **/*.md"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.19.33",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "babel-plugin-react-compiler": "^1.0.0",
    "c8": "^10.1.3",
    "editorconfig-checker": "^6.1.1",
    "eslint": "^9.39.2",
    "eslint-config-bananass": "^0.5.2",
    "eslint-markdown": "^0.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  }
}
